---
export interface Props {
    imageSrc: string;
    title: string;
    url: string;
    description: string;
}

const { imageSrc, title, url, description } = Astro.props as Props;
---

<li>
    <a href={url}>
        <div class="content">
            <p class="title">{title}</p>
            <p class="description">{description}</p>
        </div>
        <img src={imageSrc} alt={title} />
    </a>
</li>

<style>
    .title {
        font-weight: bold;
    }

    p {
        margin: 1rem;
    }

    a {
        text-decoration: none;
        color: var(--main-text-color);
        display: flex;
    }

    li {
        list-style-type: none;
        background: #2a2929;
        padding: 1rem;
        margin: 1rem;
        border-radius: 8px;
        box-shadow: var(--main-box-shadow);
    }

    li:hover {
        opacity: 0.7;
    }

    img {
        margin: 0.5rem 0;
        width: 150px;
        height: 150px;
        border-radius: 8px;
    }
</style>
