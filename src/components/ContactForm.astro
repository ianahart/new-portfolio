<script>
    import { createObserver, handleFormSubmit } from '../scripts/form.ts';

    const target = document.querySelector<HTMLDivElement>('.form-container')!;
    const form = document.getElementById('form') as HTMLFormElement;

    createObserver(target);
    handleFormSubmit(form);
