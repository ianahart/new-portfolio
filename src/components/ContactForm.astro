    .input-group {
        display: flex;
        flex-direction: column;
        width: 100%;
        margin: 1.5rem 0;
    }

    .input-group label {
        text-transform: uppercase;
        font-size: 0.9rem;
        color: var(--main-text-color);
        margin-bottom: 0.25rem;
        font-weight: bold;
    }

    .input-group input {
        color: #ddd;
        background: #2a2a2c;
        border: none;
        border-radius: 12px;
